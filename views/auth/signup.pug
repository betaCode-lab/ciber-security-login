extends ../layout/index
block content

    div(class="container max-w-md mx-auto px-2")

        h1(class="text-3xl my-8 font-extrabold text-center text-blue-800") BBVA 
            span(class="font-normal") Bancomer
        h2(class="text-center text-2xl font-extrabold mb-5 text-blue-950") #{title}

         if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg


        div.bg-white.px-8.py-5
            form(class="space-y-5" action='/auth/signup' method="post")
                
                //- input(type="hidden" name="_csrf" value=csrfToken)

                div 
                    label(for="username" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Complete Name
                    input(type='text' name='username' placeholder='Name' value=`${username ? username : ""}` class="block border border-grey-light w-full p-3 rounded")

                div 
                    label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email
                    input(type='email' name='email' placeholder='Email' value=`${email ? email : ""}` class="block border border-grey-light w-full p-3 rounded")
                
                div 
                    label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Password
                    input(type='password' name='password' placeholder='Password' class="block border border-grey-light w-full p-3 rounded")

                div 
                    label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Confirm Password
                    input(type='password' name='confirmPassword' placeholder='Confirm Password' class="block border border-grey-light w-full p-3 rounded")
                    //-div(class="mt-5")
                       //- input(type="checkbox" id="miCheckbox" class="mr-2" onclick ="aceptar()")
                       //- label(for="miCheckbox" class="text-gray-500 font-bold") Aceptar Terminos y Condiciones

                input(type="submit", value="Sign Up" class="uppercase bg-blue-800 cursor-pointer rounded py-2 px-3 text-white font-bold w-full")
                
                div(class="flex items-center justify-between")
                    a(href="/auth/login" class="text-gray-700") Log In
                    a(href='/auth/forgot-password' class="text-gray-700") Forgot your password?


